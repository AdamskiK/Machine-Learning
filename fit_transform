# Machine-Learning

class ExtractOsName():
    def __init__(self, dataset, col, col_name):
        self.dataset = dataset
        self.col = col
        self.col_name = col_name
    def fit(self):
        return self
    def transform(self, dataset):
        dataset[self.col_name]=self.dataset[self.col].str.extract('(?<=\()(\w+)')
        return dataset
        
class CompareColumns():
    def __init__(self, dataset, col1, col2, new_col_name):
        self.dataset = dataset
        self.col1 = col1
        self.col2 = col2
        self.new_col_name = new_col_name
    def fit(self):
        return self
    def transform(self, dataset):
        self.dataset[self.new_col_name]=self.dataset[self.col1]==self.dataset[self.col2]
        return dataset
        
